@page
@model QRCodeUserModel
@{
    ViewData["Title"] = "QRCode Utente";
}

<main>
    <div class="container">
        <div class="text-center mb-4">
            <h1 class="text-center card-text-title mb-4">QRCode Utente</h1>
        </div>
        <div class="d-flex justify-content-center">
            <div class="card mb-3" style="width: 18rem;">
                <div class="card-body text-center d-flex justify-content-center align-items-center">
                @if (Model.QRCodeImage!= null)
                {
                    <img alt="QR Code" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.QRCodeImage)" />
                }
                else
                {
                    <p>QRCode momentanemente non disponibile</p>
                }
                </div>
            </div>
        </div>
    </div>
</main>



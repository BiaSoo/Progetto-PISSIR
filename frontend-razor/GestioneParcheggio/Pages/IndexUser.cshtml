@page
@model IndexUserModel
@{
    ViewData["Title"] = "Area Personale";
}

<main>
    <div class="container">
        <div class="text-center mb-4">
            <h3 class="card-text-title">DASHBOARD Personale</h3>
        </div>
        <div class="d-flex flex-wrap justify-content-center">
            <!-- QRCode -->
            <a class="card mb-3 card-selectable mx-2" asp-page="QRCodeUser" style="width: 18rem;">
                <img src="opzioneQRCode.png" class="card-img-top" alt="...">
                <div class="card-body text-center">
                    <h5 class="card-text-title color-card-indexUser">QRCode</h5>
                    <p class="card-text card-text-indexUser">Scansiona all'ingresso per accedere nel parcheggio</p>
                </div>
            </a>
            <!-- Prenota -->
            @if (Model.IsPremiumUser)
            {
                <a id="prenotaCard" class="card mb-3 card-selectable mx-2" asp-page="PrenotaPosto" style="width: 18rem;">
                    <img src="opzionePrenota.png" class="card-img-top" alt="...">
                    <div class="card-body text-center">
                        <h5 class="card-text-title color-card-indexUser">Prenota</h5>
                        <p class="card-text card-text-indexUser">Clicca per prenotare un posto auto</p>
                    </div>
                </a>
            }
            <!-- Richiedi Ricarica -->
            <a class="card mb-3 card-selectable mx-2" asp-page="RichiediRicarica" style="width: 18rem;">
                <img src="opzioneRicarica.png" class="card-img-top" alt="Immagine Ricarica">
                <div class="card-body text-center">
                    <h5 class="card-text-title color-card-indexUser">Richiedi Ricarica</h5>
                    <p class="card-text card-text-indexUser">Richiedi una ricarica per la tua auto</p>
                </div>
            </a>
            <!-- Mie Prenotazioni -->
            @if (Model.IsPremiumUser)
            {
                <a id="miePrenotazioniCard" class="card mb-3 card-selectable mx-2" asp-page="Prenotazioni" style="width: 18rem;">
                    <img src="opzioneMiePrenotazioni.png" class="card-img-top" alt="...">
                    <div class="card-body text-center">
                        <h5 class="card-text-title color-card-indexUser">Mie Prenotazioni</h5>
                        <p class="card-text card-text-indexUser">Visualizza le tue prenotazioni attive e cancellala se non hai piu bisogno</p>
                    </div>
                </a>
            }
            <!-- Mostra Transazioni effettuate -->
            <a class="card mb-3 card-selectable mx-2" asp-page="TransazioniUtente" style="width: 18rem;">
                <img src="opzioneTransazioni.png" class="card-img-top" alt="Immagine non disponibile">
                <div class="card-body text-center">
                    <h5 class="card-text-title color-card-indexUser">Transazioni effettuate</h5>
                    <p class="card-text card-text-indexUser">Visualizza le tue transazioni effettuate</p>
                </div>
            </a>
            <!-- Modifica dati Carta -->
            <a asp-page="EditCard" class="card mb-3 card-selectable mx-2" style="width: 18rem;">   
                <img src="opzioneModificaCarta.png" class="card-img-top" alt="...">
                <div class="card-body text-center">
                    <h5 class="card-text-title color-card-indexUser">Modifica Carta</h5>
                    <p class="card-text card-text-indexUser">Modifica le informazioni sulla tua carta</p>
                </div>
            </a>
            <!-- Tipologia di utente -->
            <a class="card mb-3 card-selectable mx-2" asp-page="UserType" style="width: 18rem;">
                <img src="opzioneTipoUtente.png" class="card-img-top" alt="...">
                <div class="card-body text-center">
                    <h5 class="card-text-title color-card-indexUser">Tipologia di utente</h5>
                    <p class="card-text card-text-indexUser">Visualizza e modifica il tuo tipo di utente</p>
                </div>
            </a>
            <!-- Notifica mqtt -->
            <a class="card mb-3 card-selectable mx-2" asp-page="Notifica" style="width: 18rem;">
                <img src="notifica.png" class="card-img-top" alt="...">
                <div class="card-body text-center">
                    <h5 class="card-text-title color-card-indexUser">Notifica Ricarica</h5>
                    <p class="card-text card-text-indexUser">Visualizza i messaggi ricevuti sullo stato di ricarica della tua auto</p>
                </div>
            </a>
        </div>
    </div>
</main>







